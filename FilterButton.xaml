<UserControl x:Class="cooking_app.FilterButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:cooking_app"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="130">
    <Grid Background="white" >
        <Button x:Name="filterButton" Click="btnFilter_Clicked" Grid.Column="2" Grid.Row="2" FontSize="15" Background="#50AF18" Foreground="#F5F5F5" Margin="5, 5, 5, 5" Padding="10, 2, 10, 5" Height="27" Width="120" HorizontalAlignment="Left">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="15"/>
                </Style>
            </Button.Resources>
            JAPANESE
        </Button>

    </Grid>
</UserControl>