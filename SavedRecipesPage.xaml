<Page x:Class="cooking_app.SavedRecipesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:cooking_app"
      mc:Ignorable="d" 
                   xmlns:fa="http://schemas.fontawesome.io/icons/"

      d:DesignHeight="840" d:DesignWidth="390"
      Title="SavedRecipesPage" Background="White"
    >

    <DockPanel LastChildFill="False">
        <DockPanel DockPanel.Dock="Top">
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" HorizontalAlignment="Center">
                <TextBlock FontSize="30" Margin="90,0,0,10" 
                               HorizontalAlignment="Center" FontWeight="Bold" Foreground="#5F5F5F"
                               Grid.ColumnSpan="3"> 
                     MY RECIPES
                </TextBlock>
                <Button x:Name="generalSearch"  Height="30" Width="30" Background="White" BorderThickness="0" Margin="55,0,0,7" 
                        Click="generalSearch_Click">
                    <fa:ImageAwesome Icon="Search" Foreground="#9B9B9B" Width="30" Height="30"/>
                </Button>
            </StackPanel>

            <Border DockPanel.Dock="Bottom" BorderThickness="2" BorderBrush="#9B9B9B" HorizontalAlignment="Center" Width="300" Height="36" >
                <Border.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="14"/>
                    </Style>
                </Border.Resources>

                <Button Content="Search Saved Recipes" Width="250" Height="28" Background="White" BorderThickness="0" HorizontalContentAlignment="Left"
                        Click="searchSaved_Click"/>

            </Border>


        </DockPanel>

        <Grid DockPanel.Dock="Top">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <ScrollViewer ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Hidden" Height="650">
                <Grid Margin="0,0,0,0" DockPanel.Dock="Top">


                    <StackPanel Name="SavedRecipesStackPanel">
                        <StackPanel Orientation="horizontal">
                            <Button x:Name ="breakfast" Grid.Column="0" Grid.Row="3" Width="100" Height="70"
                     Margin="20,20,10,20" Content="BREAKFAST" Background="#50af18" Foreground="White"
                    FontSize="17" FontWeight="Medium" BorderThickness="2" Click="breakfast_Click">

                                <Button.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="CornerRadius" Value="7"/>
                                    </Style>
                                </Button.Resources>

                            </Button>


                            <Button x:Name="lunch" Grid.Column="1" Grid.Row="3" Width="100" Height="70"
                     Margin="10,20,20,20" Content="LUNCH" Background="#50af18" Foreground="White"
                    FontSize="17" FontWeight="Medium" BorderThickness="2" Click="lunch_Click">

                                <Button.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="CornerRadius" Value="7"/>
                                    </Style>
                                </Button.Resources>

                            </Button>

                            <Button x:Name="dinner" Grid.Column="2" Grid.Row="3" Width="100" Height="70"
                     Margin="0" Content="DINNER" Background="#50af18" Foreground="White"
                    FontSize="17" FontWeight="Medium" BorderThickness="2" Click="dinner_Click">

                                <Button.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="CornerRadius" Value="7"/>
                                    </Style>
                                </Button.Resources>

                            </Button>

                        </StackPanel>



                        <StackPanel Orientation="horizontal">


                            <Button  x:Name="snacks" Grid.Column="0" Grid.Row="4" Width="100" Height="70"
                     Margin="20,0,10,10" Content="SNACKS" Background="#50af18" Foreground="White"
                     FontSize="17" FontWeight="Medium" BorderThickness="2" Click="snacks_Click">

                                <Button.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="CornerRadius" Value="7"/>
                                    </Style>
                                </Button.Resources>

                            </Button>

                            <Button x:Name="dessert" Grid.Column="1" Grid.Row="4" Width="100" Height="70"
                     Margin="10,0,10,10" Content="DESSERT" Background="#50af18" Foreground="White"
                    FontSize="17" FontWeight="Medium" BorderThickness="2" Click="dessert_Click">

                                <Button.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="CornerRadius" Value="7"/>
                                    </Style>
                                </Button.Resources>

                            </Button>


                            <Button x:Name="drinks" Grid.Column="2" Grid.Row="4" Width="100" Height="70"
                     Margin="10,0,0,10" Content="DRINKS" Background="#50af18" Foreground="White"
                    FontSize="17" FontWeight="Medium" BorderThickness="2" Click="drinks_Click">
                                <Button.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="CornerRadius" Value="7"/>
                                    </Style>
                                </Button.Resources>

                            </Button>

                        </StackPanel>


                        <!-- Where the recipes are added in-->

                    </StackPanel>



                    <!--
            <Border Grid.Column="0" Grid.Row="5" BorderBrush="#5F5F5F" BorderThickness="3"
                    Grid.ColumnSpan="3" Grid.RowSpan="3" Margin="32,17,32,0"/>

